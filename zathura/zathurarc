map i recolor

set adjust-open "best-fit"
set pages-per-row 1

set scroll-page-aware "true"
set scroll-full-overlap 0.0
set scroll-step 50

set zoom-min 10
set guioptions ""
set font "FiraCode 15"

set default-bg                  "#af1d2021"
set default-fg                  "#afa89984"

set recolor-keephue true
set recolor-reverse-video false

set recolor-lightcolor          "#1c1c1c"
set recolor-darkcolor           "#d0d0d0"

set statusbar-h-padding 0
set statusbar-v-padding 0

set notification-error-bg       "#1c1c1c" # bg
set notification-error-fg       "#d70000" # bright:red
set notification-warning-bg     "#1c1c1c" # bg
set notification-warning-fg     "#ffaf00" # bright:yellow
set notification-bg             "#585858" # bg
set notification-fg             "#5faf5f" # bright:green

set completion-bg               "#504945" # bg2
set completion-fg               "#ebdbb2" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#0087af" # bright:blue
set completion-highlight-fg     "#504945" # bg2

# Define the color in index mode
set index-bg                    "#504945" # bg2
set index-fg                    "#ebdbb2" # fg
set index-active-bg             "#83a598" # bright:blue
set index-active-fg             "#504945" # bg2

set inputbar-bg                 "#1c1c1c" # bg
set inputbar-fg                 "#d0d0d0" # fg

set statusbar-bg                "#504945" # bg2
set statusbar-fg                "#ebdbb2" # fg

set highlight-color             "#fabd2f" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set render-loading              true
set render-loading-bg           "#1d2021" # bg
set render-loading-fg           "#ebdbb2" # fg

# Recolor book content's color
set recolor                     true
